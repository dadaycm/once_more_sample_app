<% @user ||= current_user %>
<div class="stats">
  <a href="<%= superstars_user_path(@user) %>">
    <strong id="superstars" class="stat">
      <%= @user.superstars.count %>
    </strong>
    superstars
  </a>
  <a href="<%= fans_user_path(@user) %>">
    <strong id="fans" class="stat">
      <%= @user.fans.count %>
    </strong>
    fans
  </a>
</div>
